<?xml version="1.0" encoding="UTF-8"?>
<directive xmlns="descatter/filer/schema/1.0">
	<info>
		<title>Test Directive for the TestConditionElement unit test</title>
		<author>
			<name>Christopher R. Field</name>
			<email>cfield2 at gmail dot com</email>
		</author>
		<description>
			A simple directive to test correct handling of condition elements.
		</description>
	</info>
	<macros>
		<macro name="original-name">
			<text variable="file-name"/>
			<text variable="file-extension" prefix="."/>
		</macro>
	</macros>
	<paths>
		<path name="default-path">
			<file macro="original-name"/>
		</path>
	</paths>
	<rules>
		<rule name="equals-rule" path="equals-path">
			<conditions match="all">
				<condition type="equals" variable="file-index" value="5" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="equals-not-rule" path="equals-not-path">
			<conditions match="all">
				<condition type="equals" variable="file-index" value="0" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="equals-case-sensitive-true-rule" path="equals-case-sensitive-true-path">
			<conditions match="all">
				<condition type="equals" variable="file-extension" value="TXT" case-sensitive="true"/>  
			</conditions>
		</rule>
		<rule name="equals-case-sensitive-false-rule" path="equals-case-sensitive-false-path">
			<conditions match="all">
				<condition type="equals" variable="file-extension" value="TXT" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="equals-missing-case-sensitive-rule" path="equals-missing-case-sensitive-path">
			<conditions match="all">
				<condition type="equals" variable="file-extension" value="TXT"/>  
			</conditions>
		</rule>
		<rule name="greater-than-rule" path="greater-than-path">
			<conditions match="all">
				<condition type="greater-than" variable="file-index" value="4" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="greater-than-not-rule" path="greater-than-not-path">
			<conditions match="all">
				<condition type="greater-than" variable="file-index" value="6" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="less-than-rule" path="less-than-path">
			<conditions match="all">
				<condition type="less-than" variable="file-index" value="6" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="less-than-not-rule" path="less-than-not-path">
			<conditions match="all">
				<condition type="less-than" variable="file-index" value="0" case-sensitive="false"/>  
			</conditions>
		</rule>		
		<rule name="all-rule" path="all-path">
			<conditions match="all">
				<condition type="equals" variable="file-extension" value="txt" case-sensitive="false"/>
				<condition type="equals" variable="file-index" value="5" case-sensitive="false"/>
				<condition type="equals" variable="file-name" value="test_file" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="all-not-rule" path="all-not-path">
			<conditions match="all">
				<condition type="equals" variable="file-extension" value="txt" case-sensitive="false"/>
				<condition type="equals" variable="file-index" value="0" case-sensitive="false"/>
				<condition type="equals" variable="file-name" value="test_file" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="any-rule" path="any-path">
			<conditions match="any">
				<condition type="equals" variable="file-extension" value="txt" case-sensitive="false"/>
				<condition type="equals" variable="file-index" value="0" case-sensitive="false"/>
				<condition type="equals" variable="file-name" value="test_file" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="any-not-rule" path="any-not-path">
			<conditions match="any">
				<condition type="equals" variable="file-extension" value="ext" case-sensitive="false"/>
				<condition type="equals" variable="file-index" value="0" case-sensitive="false"/>
				<condition type="equals" variable="file-name" value="test_not_file" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="missing-type-rule" path="missing-type-path">
			<conditions match="any">
				<condition variable="file-extension" value="ext" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="missing-variable-rule" path="missing-variable-path">
			<conditions match="any">
				<condition type="equals" value="ext" case-sensitive="false"/>  
			</conditions>
		</rule>
		<rule name="missing-value-rule" path="missing-value-path">
			<conditions match="any">
				<condition type="equals" variable="file-extension" case-sensitive="false"/>  
			</conditions>
		</rule>
	</rules>
</directive>