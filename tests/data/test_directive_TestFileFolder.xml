<?xml version="1.0" encoding="UTF-8"?>
<directive xmlns="descatter/filer/schema/1.0" name="TestFileFolder">
	<info>
		<title>Test Directive for the TestFileFile unit test</title>
		<author>
			<name>Christopher R. Field</name>
			<email>cfield2 at gmail dot com</email>
		</author>
		<description>
			A simple directive to file a single file from one folder to another folder.
		</description>
	</info>
	<macros>
		<macro name="original-name">
			<text variable="file-name"/>
			<text variable="file-extension" prefix="."/>
		</macro>
	</macros>
	<paths>
		<path name="default-path">
			<file macro="original-name"/>
		</path>
	</paths>
	<rules>
		<rule name="default" path="default-path">
			<conditions match="all">
				<condition type="equals" variable="file-name" value="*" case-sensitive="false"/>  
			</conditions>
		</rule>
	</rules>
</directive>