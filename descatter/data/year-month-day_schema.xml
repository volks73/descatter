<?xml version="1.0" encoding="UTF-8" ?>
<content xmlns="descatter/2013/content_schema">
	<macros>
		<macro name="checkin-year">
			<date variable="checkin-timestamp">
				<date-part name="year"/>
			</date>
		</macro>
		<macro name="checkin-month">
			<date variable="checkin-timestamp">
				<date-part name="month" form="numeric-leading-zeros"/>
			</date>
		</macro>
		<macro name="checkin-day">
			<date variable="checkin-timestamp">
				<date-part name="day" form="numeric-leading-zeros"/>
			</date>
		</macro>
	</macros>
	<structure>
		<folder name="checkin-year">
			<folder name="checkin-month">
				<folder name="checkin-day">
					<extensions>
						<extension name="*">
							<file name="original-file-name"/>
						</extension>
					</extensions>
				</folder>
			</folder>
		</folder>
	</structure>
</content>